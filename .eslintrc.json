{
  "root": true,
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "airbnb-base"
  ],
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.spec.ts"
      ],
      "env": {
        "jest": true
      }
    }
  ],
  "rules": {
    "import/extensions": [
      "off"
    ],
    "import/no-unresolved": [
      "off"
    ]
  }
}
